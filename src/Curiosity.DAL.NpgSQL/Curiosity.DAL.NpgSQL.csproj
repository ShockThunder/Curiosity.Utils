<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <LangVersion>8</LangVersion>
        <Nullable>enable</Nullable>
        <Title>Marvin.DAL.NpgSQL</Title>
        <Authors>Max Markelow (@markeli)</Authors>
        <Description>Classes for NpgSQL driver</Description>
        <Copyright>Marvin, 2020</Copyright>
        <PackageTags>marvin; dal; NpgSQL; Postgres</PackageTags>
        <AssemblyVersion>1.0.0</AssemblyVersion>
        <FileVersion>1.0.0</FileVersion>
        <PackageVersion>1.0.0</PackageVersion>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DocumentationFile>bin\Release\Marvin.DAL.NpgSQL.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Npgsql" Version="5.0.1.1" />
    </ItemGroup>

</Project>
