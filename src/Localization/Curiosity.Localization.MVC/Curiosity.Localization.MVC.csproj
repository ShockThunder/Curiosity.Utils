<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>

        <PackageId>Curiosity.Localization.MVC</PackageId>
        <Title>Curiosity.Localization.MVC</Title>
        <Description>Classes for localizing applications in more efficient way than Microsfot's way.</Description>
        <Summary>Classes for localizing applications in more efficient way than Microsfot's way.</Summary>
        <PackageTags>Curiosity; Localization; siisltd; MVC</PackageTags>
        <Language>English</Language>

        <AssemblyVersion>1.0.0</AssemblyVersion>
        <FileVersion>1.0.0</FileVersion>
        <PackageVersion>1.0.1</PackageVersion>

        <Authors>Max Markelow (@markeli), Andrei Vinogradov (@anri-vin)</Authors>
        <Company>SIIS Ltd</Company>
        <Copyright>SIIS Ltd, 2021</Copyright>

        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>

        <PackageProjectUrl>https://github.com/siisltd/Curiosity.Utils</PackageProjectUrl>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/siisltd/Curiosity.Utils</RepositoryUrl>

        <OutputType>Library</OutputType>
        <LangVersion>8</LangVersion>
        <Nullable>enable</Nullable>
        <IsPackable>true</IsPackable>
        
    </PropertyGroup>

    <PropertyGroup>
        <PackageIcon>siisltd.png</PackageIcon>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\Curiosity.Localization\Curiosity.Localization.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.AspNetCore.Mvc.Localization" Version="2.2.0" />
    </ItemGroup>

    <ItemGroup>
      <None Include="..\..\..\siisltd.png">
        <Pack>true</Pack>
        <PackagePath>/</PackagePath>
        <Link>siisltd.png</Link>
      </None>
    </ItemGroup>

</Project>
