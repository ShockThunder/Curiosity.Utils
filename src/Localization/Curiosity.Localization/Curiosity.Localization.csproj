<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>

    <PackageId>Curiosity.Localization</PackageId>
    <Title>Curiosity.Localization</Title>
    <Description>Classes for localizing applications in more efficient way than Microsfot's way.</Description>
    <Summary>Classes for localizing applications in more efficient way than Microsfot's way.</Summary>
    <PackageTags>Curiosity; Localization; siisltd</PackageTags>
    <Language>English</Language>

    <AssemblyVersion>1.0.0</AssemblyVersion>
    <FileVersion>1.0.0</FileVersion> 
    <PackageVersion>1.1.0</PackageVersion>

    <Authors>Max Markelow (@markeli), Andrei Vinogradov (@anri-vin), Adil Mir (@AdilMirSz)</Authors>
    <Company>SIIS Ltd</Company>
    <Copyright>SIIS Ltd, 2023</Copyright>

    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>

    <PackageProjectUrl>https://github.com/siisltd/Curiosity.Utils</PackageProjectUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/siisltd/Curiosity.Utils</RepositoryUrl>
    <PackageReleaseNotes>https://github.com/siisltd/Curiosity.Utils/tree/master/src/Localization/Curiosity.Localization/CHANGELOG.md</PackageReleaseNotes>

    <OutputType>Library</OutputType>
    <LangVersion>8</LangVersion>
    <Nullable>enable</Nullable>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <PropertyGroup>
    <PackageIcon>siisltd.png</PackageIcon>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.1" />
    <PackageReference Include="Microsoft.Extensions.Localization.Abstractions" Version="6.0.13" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\siisltd.png">
      <Pack>true</Pack>
      <PackagePath>/</PackagePath>
      <Link>siisltd.png</Link>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Misc\Curiosity.Tools\Curiosity.Tools.csproj" />
  </ItemGroup>

</Project>
