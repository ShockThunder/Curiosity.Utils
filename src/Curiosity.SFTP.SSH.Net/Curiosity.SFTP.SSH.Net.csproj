<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <LangVersion>8</LangVersion>
        <Nullable>enable</Nullable>
        <Title>Marvin.SFTP.SSH.NET</Title>
        <Authors>Max Markelow (@markeli)</Authors>
        <Description>SFTP Client implemented with SSH.NET</Description>
        <Copyright>Marvin, 2020</Copyright>
        <PackageTags>marvin; SFTP; SSH.NET</PackageTags>
        <AssemblyVersion>1.0.0</AssemblyVersion>
        <FileVersion>1.0.0</FileVersion>
        <PackageVersion>1.0.1</PackageVersion>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DocumentationFile>bin\Release\Marvin.SFTP.SSH.Net.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Polly" Version="7.2.1" />
      <PackageReference Include="SSH.NET" Version="2016.1.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Curiosity.AppInitializer\Curiosity.AppInitializer.csproj" />
      <ProjectReference Include="..\Curiosity.SFTP\Curiosity.SFTP.csproj" />
      <ProjectReference Include="..\Curiosity.TempFiles\Curiosity.TempFiles.csproj" />
    </ItemGroup>

</Project>
